{
  "compileOnSave": false,
  "compilerOptions": {
    "declaration": true,
    "downlevelIteration": true,
    "experimentalDecorators": false,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "es6", "es2016", "es2017"],
    "outDir": "dist",
    "removeComments": true,
    "importHelpers": true,
    "sourceMap": false,
    "strict": true,
    "target": "es5"
  },
  "include": ["src"]
}
