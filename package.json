{
  "name": "eo-logger",
  "version": "1.0.4",
  "main": "dist/index.js",
  "repository": "https://github.com/ibitcy/eo-logger.git",
  "author": "Maksim Sharipov <m.v.sharipov@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "postbuild": "size-limit",
    "preversion": "npm run build"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "200B",
      "webpack": false
    },
    {
      "path": "dist/client/utils.js",
      "limit": "500B",
      "webpack": false
    },
    {
      "path": "dist/client/logger.js",
      "limit": "1kB",
      "webpack": false
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.4.5",
    "size-limit": "^4.4.5",
    "typescript": "^3.8.3"
  }
}
